{
  "name": "procrastinant-app-be",
  "version": "1.0.0",
  "description": "API REST para aplicación de gestión de tareas (to-do list) desarrollada con Node.js y Express.",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.js\" \"*.js\"",
